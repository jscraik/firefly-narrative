{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Firefly Narrative",
  "version": "0.10.0",
  "identifier": "com.jamie.firefly-narrative",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build && pnpm tauri:prepare-cli",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Firefly Narrative",
        "width": 1280,
        "height": 840,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "externalBin": [
      "bin/codex-app-server"
    ],
    "resources": [
      "bin/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg2NzMwNzRFRDhDNDQ1MzIKUldReVJjVFlUZ2R6aG41ZTZ5YjhjL2VoODc4c1ZtMyt6ME1MRmFjdWdqbnBnWkQvQ3VXS2diM2IK",
      "endpoints": [
        "https://github.com/jscraik/narrative/releases/latest/download/latest.json"
      ]
    },
    "sql": {
      "preload": [
        "sqlite:narrative.db"
      ]
    }
  }
}
