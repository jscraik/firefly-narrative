{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the Narrative MVP desktop app",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "updater:default",
    "dialog:allow-open",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "codex-app-server",
          "cmd": "bin/codex-app-server",
          "args": true
        }
      ]
    },
    "sql:default",
    "sql:allow-execute"
  ]
}
