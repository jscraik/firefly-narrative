{
  "name": "firefly-narrative",
  "private": true,
  "version": "0.12.0",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:tokens": "node scripts/lint-tokens.mjs",
    "lint": "pnpm lint:tokens && biome check src src-tauri/src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "vitest run src/ui/components/__tests__/BranchHeader.test.tsx src/ui/views/__tests__/BranchView.test.tsx",
    "test:integration": "vitest run --config vite.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:perf": "playwright test e2e/firefly-visual-system-v1.spec.ts --grep @firefly-perf",
    "test:lhci": "pnpm build && pnpm exec lhci autorun",
    "perf:baseline": "pnpm test:perf",
    "quality:review-loop": "pnpm test:a11y && pnpm test:lhci && pnpm test:perf",
    "otel:smoke": "node scripts/otel-smoke.mjs",
    "agentation:autopilot": "node scripts/agentation-autopilot.mjs",
    "agentation:webhooks": "node scripts/agentation-webhook-listener.mjs",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:prepare-cli": "node scripts/prepare-narrative-cli.mjs",
    "tauri:build": "tauri build",
    "docs:lint": "bash -lc \"if command -v vale >/dev/null 2>&1; then vale --minAlertLevel=warning README.md docs/README.md docs/agents/*.md; else echo 'vale not found; skipping vale check'; fi && npx -y markdownlint-cli2 README.md docs/README.md docs/agents/*.md brand/README.md\"",
    "docs:api": "typedoc",
    "analyze": "vite-bundle-analyzer",
    "repair:agent": "node scripts/repair-agent.mjs",
    "agentation:mcp": "agentation-mcp server --port 4747",
    "app:dev": "bash scripts/dev-native.sh",
    "agentation:webhook": "PORT=${PORT:-8787} TRIGGER_EVENTS=${TRIGGER_EVENTS:-submit} node scripts/agentation-autopilot.mjs",
    "agentation:dev": "bash scripts/agentation-dev.sh",
    "agentation:critique": "AGENTATION_MODE=critique PORT=${PORT:-8787} TRIGGER_EVENTS=${TRIGGER_EVENTS:-submit} node scripts/agentation-autopilot.mjs"
  },
  "dependencies": {
    "@design-studio/runtime": "file:vendor/design-studio/design-studio-runtime-2.0.0.tgz",
    "@design-studio/tokens": "file:vendor/design-studio/design-studio-tokens-2.0.0.tgz",
    "@design-studio/ui": "file:vendor/design-studio/design-studio-ui-0.0.1.tgz",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-sql": "^2.0.0",
    "@tauri-apps/plugin-store": "^2.4.2",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "beautiful-mermaid": "^0.1.3",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.2",
    "lucide-react": "^0.454.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.5",
    "rehype-raw": "^7.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.1",
    "@biomejs/biome": "^2.3.13",
    "@lhci/cli": "^0.15.1",
    "@openai/codex": "0.97.0-alpha.4",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.0",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "agentation": "^2.2.1",
    "agentation-mcp": "^1.2.0",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4.1.0",
    "typedoc": "^0.28.17",
    "typescript": "^5.4.5",
    "vite": "^6.4.1",
    "vite-bundle-analyzer": "^1.3.6",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "@design-studio/runtime": "file:vendor/design-studio/design-studio-runtime-2.0.0.tgz",
      "@design-studio/tokens": "file:vendor/design-studio/design-studio-tokens-2.0.0.tgz",
      "lodash": "^4.17.23",
      "tmp": "^0.2.4"
    }
  }
}
